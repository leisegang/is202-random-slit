<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
  <application>
    <!--
    The faces-config file is used to configure JSV.
    In this project we are only using it for configuring internationalization
    (i.e. support multiple languages)
    -->

    <!-- The locale config tag defines the supported languages -->
    <locale-config>
      <!-- The default locale is used when we do not support the user's
      preferred language. It is also used if no language is selected -->
      <default-locale>en</default-locale>
      <!-- supported-locale tags are used to define additional supported
      languages -->
      <supported-locale>no</supported-locale>
    </locale-config>

    <!-- The translations of user interface strings are kept in
    resource bundles. A resource bundle is a group of java property files
    with the same basename. Java package notation is used for the basename,
    and the resource bundles are located with the java source code -->
    <resource-bundle>
      <!-- The is202.hrms.web package will contain property files
      named uistrings_en.properties, uistrings_no.properties, etc. -->
      <base-name>is202.hrms.web.uistrings</base-name>
      <!-- this is the name that is used to refer to the resource bundle
      in the facelets (xhtml files) -->
      <var>strings</var>
    </resource-bundle>
  </application>

</faces-config>
